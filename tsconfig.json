{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "rootDir": "./",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./packages",
    "paths": {
      "@root/client": ["./client/src"],
      "@root/shared": ["./shared/src"],
      "@root/server": ["./server/src"]
    }
  }
}
